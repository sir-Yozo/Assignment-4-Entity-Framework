@{
    Layout = "_Layout";
}
@model Assignment_3_CRUD___Model.Models.Book
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <title>Book Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">Book Details</h2>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.Title</h4>
                <p><strong>Author:</strong> @Model.Author</p>
                <p><strong>Published Date:</strong> @Model.PublishedDate.ToShortDateString()</p>
                <p><strong>Genre:</strong> @Model.Genre</p>
                <p><strong>Availability:</strong> @(Model.Availability ? "Available" : "Not Available")</p>
            </div>
        </div>
        <a asp-controller="book" asp-action="BookList" class="btn btn-primary">Back</a>
    </div>
</body>
</html>