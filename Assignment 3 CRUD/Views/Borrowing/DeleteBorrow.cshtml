@{
    Layout = "_Layout";
}
@model Assignment_3_CRUD.Models.BorrowingDetailsViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <title>Delete Borrowing</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">Delete Borrowing</h2>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.BookName</h4>
                <p><strong>Reader:</strong> @Model.ReaderName</p>
                <p><strong>Borrow Date :</strong> @Model.Borrowing.BorrowDate.ToShortDateString()</p>
                <p><strong>Return Date :</strong> @Model.Borrowing.ReturnDate</p>
                <p><strong>Returned Date :</strong> @Model.Borrowing.ReturnedDate</p>
                <p><strong>Status:</strong> @Model.Borrowing.Status</p>
                <p><strong>Notes:</strong> @Model.Borrowing.Notes</p>
            </div>
        </div>
        <div class="mt-3">
            <h3>Are you sure you want to delete this Borrowing?</h3>
            <form asp-action="DeleteBorrow" method="post">
                <input type="hidden" asp-for="Borrowing.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="BorrowingList" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>


</body>
</html>