@{
    Layout = "_Layout";
}
@model Assignment_3_CRUD.Models.Borrowing
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <title>Delete Borrowing</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">Delete Borrowing</h2>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.Book?.Title</h4> 
                <p><strong>Reader:</strong> @Model.Reader?.FullName</p> 
                <p><strong>Borrow Date :</strong> @Model.BorrowDate.ToShortDateString()</p>
                <p><strong>Return Date :</strong> @Model.ReturnDate.ToShortDateString() </p>
                <p><strong>Returned Date :</strong> @Model.ReturnedDate?.ToShortDateString() ?? "Not Returned"</p>
                <p><strong>Status:</strong> @Model.Status</p>
                <p><strong>Notes:</strong> @Model.Notes</p>
            </div>
        </div>
        <div class="mt-3">
            <h3>Are you sure you want to delete this Borrowing?</h3>
            <form asp-action="DeleteBorrow" method="post">
                @* <input type="hidden" asp-for="Id" /> *@
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="BorrowingList" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</body>
</html>
