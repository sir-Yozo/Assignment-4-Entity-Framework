@{
    Layout = "_Layout";
}
@using Assignment_3_CRUD___Model.Models
@model List<BorrowingDetailsViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <title>Borrowing List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">Borrowing List</h2>
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th></th>
                    <th>Book</th>
                    <th>Reader</th>
                    <th>Borrow Date</th>
                    <th>Return Date</th>
                    <th>Returned Date</th>
                    <th>Status</th>
                    <th>Notes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var borrowing in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Borrowing" asp-action="BorrowingDetails" asp-route-id="@borrowing.Borrowing.Id">View</a>
                        </td>
                        <td>
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@borrowing.Borrowing.BookId">@borrowing.BookName</a>
                        </td>
                        <td>
                            <a asp-controller="Reader" asp-action="ReaderDetails" asp-route-id="@borrowing.Borrowing.ReaderId">@borrowing.ReaderName</a>
                        </td>   
                        <td>@borrowing.Borrowing.BorrowDate.ToShortDateString()</td>
                        <td>@borrowing.Borrowing.ReturnDate.ToShortDateString()</td>
                        <td>@borrowing.Borrowing.ReturnedDate</td>
                        <td>@borrowing.Borrowing.Status</td>
                        <td>@borrowing.Borrowing.Notes</td>
                        <td>
                            <a asp-controller="Borrowing" asp-action="EditBorrow" asp-route-id="@borrowing.Borrowing.Id">Edit</a> |
                            <a asp-controller="Borrowing" asp-action="ConfirmDelete" asp-route-id="@borrowing.Borrowing.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-primary" asp-controller="borrowing" asp-action="AddBorrow">Add</a>
    </div>
</body>
</html>
