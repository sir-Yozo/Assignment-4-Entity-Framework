@{
    Layout = "_Layout";
}

@model Assignment_3_CRUD.Models.BorrowingDetailsViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <title>Borrowing Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">Borrowing Details</h2>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.Book.Title</h4>
                <p><strong>Reader:</strong> @Model.Reader.FullName</p> 
                <p><strong>Borrow Date:</strong> @Model.Borrowing.BorrowDate.ToShortDateString()</p>
                <p><strong>Return Date:</strong> @Model.Borrowing.ReturnDate.ToShortDateString()</p>
                <p><strong>Returned Date:</strong> @Model.Borrowing.ReturnedDate</p>
                <p><strong>Notes:</strong> @Model.Borrowing.Status</p>
                <p><strong>Notes:</strong> @Model.Borrowing.Notes</p>
            </div>
        </div>
        <a asp-controller="borrowing" asp-action="BorrowingList" class="btn btn-primary">Back</a>
    </div>
</body>
</html>