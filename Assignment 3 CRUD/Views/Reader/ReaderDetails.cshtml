@{
    Layout = "_Layout";
}
@model Assignment_3_CRUD.Models.Reader
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <title>Reader Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">Reader Details</h2>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.FullName</h4>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Membership Date:</strong> @Model.MembershipDate.ToShortDateString()</p>
                <p><strong>PhoneNumber:</strong> @Model.PhoneNumber</p>
                <p><strong>Address:</strong> @Model.Address</p>
            </div>
        </div>
        <a href="javascript:history.back()" class="btn btn-primary">Back</a>

    </div>
</body>
</html>