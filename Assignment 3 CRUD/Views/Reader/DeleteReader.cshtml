@{
    Layout = "_Layout";
}
@model Assignment_3_CRUD.Models.Reader
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <title>Delete Reader</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">Delete Reader</h2>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@Model.FullName</h4>
                    <p><strong>Author:</strong> @Model.Email</p>
                    <p><strong>Published Date:</strong> @Model.MembershipDate.ToShortDateString()</p>
                    <p><strong>Genre:</strong> @Model.PhoneNumber</p>
                    <p><strong>Availability:</strong> @Model.Address</p>
                </div>
            </div>
        <div class="mt-3">
            <h3>Are you sure you want to delete this reader?</h3>
            <form asp-action="DeleteReader" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="ReaderListPage" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>


</body>
</html>